{
  "compilerOptions": {
    "rootDir": "./lambda",
    "target": "es5",
    "module": "commonjs",
    "moduleResolution": "node",
    "sourceMap": false,
    "noImplicitAny": true,
    "lib": [
      "es5",
      "es2015",
      "es6",
      "es2015.promise",
      "dom"
    ],
    "outDir": "./dist",
    "baseUrl": ".",
    "removeComments": true,
    "allowJs": false,
    "strictNullChecks": true,
    "allowUnreachableCode": false,
    "allowUnusedLabels": false
  },
  "compileOnSave": true,
  "exclude": [
    "node_modules",
    "awsmobilejs",
    "**/*.spec.ts"
  ]
}